<%= render partial: "layouts/merchant_header", locals: {merchant: @merchant} %>

<h1>Update bulk discount</h1>

<%= form_with model: [@merchant, @discount], method: :patch, local: true do |f| %>
  <%= f.label :percentage, "Percentage" %><br/>
  <%= f.number_field :percentage %><br/>

  <%= f.label :quantity, "Quantity" %><br/>
  <%= f.number_field :quantity %><br/>

  <%= f.hidden_field :merchant_id, value: @merchant.id %>
  <%= f.submit "Submit" %>
<% end %>
